    <script>
        let rules = [];

        function addRule() {
            const kw = document.getElementById('keyword').value;
            const type = document.getElementById('msgType').value;
            const content = document.getElementById('content').value;

            if(!kw || !content) return alert('è«‹å¡«å¯«å®Œæ•´è³‡è¨Š');

            rules.push({ keyword: kw, type: type, content: content });
            renderList();
            
            // æ¸…ç©ºè¼¸å…¥
            document.getElementById('keyword').value = '';
            document.getElementById('content').value = '';
        }

        function renderList() {
            const list = document.getElementById('ruleList');
            list.innerHTML = '';
            rules.forEach((r, index) => {
                list.innerHTML += `
                    <div class="flex justify-between items-center p-3 bg-gray-50 rounded border">
                        <div>
                            <span class="font-bold text-purple-700">[${r.keyword}]</span> 
                            <span class="text-xs bg-gray-200 px-2 py-1 rounded">${r.type}</span>
                            <p class="text-xs text-gray-500 truncate w-48">${r.content}</p>
                        </div>
                        <button onclick="rules.splice(${index},1);renderList()" class="text-red-500 hover:text-red-700">âŒ</button>
                    </div>
                `;
            });
        }

        function generateConfig() {
            const output = document.getElementById('output');
            output.innerText = JSON.stringify(rules, null, 2);
            output.classList.remove('hidden');
        }
    </script>
