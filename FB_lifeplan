<script>
    // 2026 å®‰éº—çé‡‘æ•¸æ“šåº« (æœˆå‡è¬)
    // æ ¹æ“šæ‚¨æä¾›çš„å°è©±ç´€éŒ„ï¼šDiamond=500è¬/å¹´, FC=3000è¬/å¹´
    const amwayIncomes = {
        0: 0,
        1: 4,      // éŠ€çç«  (æœˆ)
        2: 6,      // é‡‘çç« 
        3: 9,      // ç™½é‡‘
        101: 11,   // ç´…å¯¶çŸ³
        4: 13,     // å‰µè¾¦äººç™½é‡‘
        102: 15,   // è—å¯¶çŸ³
        5: 20.8,   // ç¿¡ç¿  (250/12)
        6: 30,     // å‰µè¾¦äººç¿¡ç¿  (360/12)
        7: 41.6,   // é‘½çŸ³ (500/12)
        8: 50,     // å‰µè¾¦äººé‘½çŸ³ (600/12)
        9: 58.3,   // EDC (700/12)
        10: 66.6,  // é›™é‘½ (800/12)
        11: 75,    // åƒé‘½ (900/12)
        12: 83.3,  // çš‡å†  (1000/12)
        13: 250    // FC (3000/12)
    };

    window.onload = function() {
        addDreamRow(); // é è¨­åŠ å…¥ä¸€è¡Œå¤¢æƒ³
    };

    function addDreamRow() {
        const div = document.createElement('div');
        div.className = 'dynamic-item';
        const uniqueId = Date.now() + Math.random().toString(16).slice(2);
        div.innerHTML = `
            <div style="margin-bottom:10px; display:flex; justify-content:space-between; align-items:center;">
                <label style="font-weight:bold; color:var(--primary-dream);">å¤¢æƒ³é …ç›®</label>
                <button class="btn-remove" onclick="removeRow(this)">âœ•</button>
            </div>
            <div class="input-group" style="margin-bottom:10px;">
                <div class="input-wrapper">
                    <input type="text" class="dream-name" placeholder="åç¨± (ex: å°ä¸­ä¸ƒæœŸç¾å®…)">
                </div>
            </div>
            <div class="flex-row">
                <div class="flex-grow">
                    <div class="input-wrapper">
                        <input type="number" class="dream-cost" step="0.1" placeholder="ç¸½åƒ¹(è¬)" oninput="updatePreview(this, 'pre-${uniqueId}'); calcAll();">
                    </div>
                    <div class="preview-box" id="pre-${uniqueId}">0 å…ƒ</div>
                </div>
                <div class="flex-grow">
                    <div class="input-wrapper">
                        <select class="dream-type" onchange="calcAll()">
                            <option value="full">å…¨æ¬¾è²·æ–·</option>
                            <option value="house">æˆ¿è²¸ (é ­æœŸ3æˆ)</option>
                            <option value="car">è»Šè²¸ (é ­æœŸ1æˆ)</option>
                        </select>
                    </div>
                </div>
            </div>
        `;
        document.getElementById('dreams-container').appendChild(div);
    }

    function removeRow(btn) {
        btn.closest('.dynamic-item').remove();
        calcAll();
    }

    function updatePreview(input, previewId) {
        const val = parseFloat(input.value);
        const el = document.getElementById(previewId);
        if (isNaN(val)) el.innerText = "0 å…ƒ";
        else el.innerText = Math.round(val * 10000).toLocaleString() + " å…ƒ";
        calcAll();
    }

    // --- 2025/2026 å°ç£ç¶œæ‰€ç¨…è¨ˆç®—æ ¸å¿ƒ ---
    function calculatePersonalTax(income) {
        // å…ç¨…é¡ 9.7 + æ¨™æ‰£ 13.1 + è–ªæ‰£ 21.8 = 44.6 (ä¿å®ˆä¼°è¨ˆç”¨45è¬)
        // 2025èª¿æ•´å¾Œç´„ 47.4è¬ å…ç¨…
        let taxable = income - 47.4; 
        if (taxable <= 0) return 0;
        
        let tax = 0;
        // ç´šè· (è¬)
        if(taxable <= 59) {
            tax = taxable * 0.05;
        } else if(taxable <= 133) {
            tax = taxable * 0.12 - 4.13;
        } else if(taxable <= 266) {
            tax = taxable * 0.20 - 14.77;
        } else if(taxable <= 498) {
            tax = taxable * 0.30 - 41.37;
        } else {
            tax = taxable * 0.40 - 91.17;
        }
        return tax;
    }

    function calcAll() {
        // 1. å–å¾—è¼¸å…¥å€¼
        const incomeActiveYear = parseFloat(document.getElementById('income-active').value) || 0;
        const incomePassiveLocal = parseFloat(document.getElementById('income-passive-local').value) || 0;
        const expenseTotalYear = parseFloat(document.getElementById('expense-total').value) || 0;
        const debtAnnual = parseFloat(document.getElementById('debt-annual').value) || 0;
        
        const pinLevel = parseFloat(document.getElementById('amway-pin').value);
        const amwayYearly = amwayIncomes[pinLevel] * 12;

        // 2. ç¨…å‹™è¨ˆç®— (ä¸€èˆ¬æƒ…æ³ vs å…¬å¸æ¨¡å¼)
        const incomeBase = incomeActiveYear + incomePassiveLocal; // ä¸å«å®‰éº—çš„åŸºç¤æ‰€å¾—
        const taxBase = calculatePersonalTax(incomeBase); // åŸºç¤ç¨…é¡

        // 3. å®‰éº—æƒ…å¢ƒä¸‹çš„ç¨…å‹™å„ªåŒ–
        const totalIncomeAmway = incomeBase + amwayYearly;
        const taxPersonalMode = calculatePersonalTax(totalIncomeAmway); // æ–¹æ¡ˆA: å…¨éƒ¨å€‹äººå ±

        // æ–¹æ¡ˆB: å®‰éº—æ”¶å…¥èµ°å…¬å¸ (ç‡Ÿæ‰€ç¨…20% + è¨˜å¸³è²»)
        let isCompanyMode = false;
        let taxCompanyTotal = taxPersonalMode;
        let taxSaved = 0;
        
        if (amwayYearly > 80) { // å¹´æ”¶è¶…é80è¬æ‰è€ƒæ…®é–‹å…¬å¸ (è¨˜å¸³è²»æˆæœ¬)
            const maintenance = 4.0; // è¨˜å¸³è²»
            // å…¬å¸éƒ¨åˆ†ç¨…: (æ”¶å…¥-æˆæœ¬)*20%
            let profit = amwayYearly - maintenance;
            let corporateTax = (profit > 0) ? profit * 0.2 : 0;
            
            // ç¸½ç¨…è²  = å€‹äººåŸºç¤ç¨…(æœ¬æ¥­) + å…¬å¸ç¨… + ç¶­è­·è²»
            let combinedTax = taxBase + corporateTax + maintenance;
            
            if (combinedTax < taxPersonalMode) {
                isCompanyMode = true;
                taxCompanyTotal = combinedTax;
                taxSaved = taxPersonalMode - combinedTax;
            }
        }

        const finalTaxAmway = isCompanyMode ? taxCompanyTotal : taxPersonalMode;

        // 4. è¨ˆç®—æ·¨ç¾é‡‘æµ (å¹´)
        const netCashflowBase = incomeBase - expenseTotalYear - debtAnnual - taxBase;
        const netCashflowAmway = totalIncomeAmway - expenseTotalYear - debtAnnual - finalTaxAmway;

        // 5. æ›ç®—æœˆè‡ªç”±ç¾é‡‘
        const monthlySurplusBase = netCashflowBase / 12;
        const monthlySurplusAmway = netCashflowAmway / 12;

        // 6. æ›´æ–°å„€è¡¨æ¿
        document.getElementById('disp-monthly-surplus').innerText = Math.round(monthlySurplusBase * 10000).toLocaleString();
        const dispTax = (pinLevel > 0) ? finalTaxAmway : taxBase;
        document.getElementById('disp-tax').innerText = Math.round(dispTax * 10000).toLocaleString();
        document.getElementById('disp-amway-surplus').innerText = Math.round(monthlySurplusAmway * 10000).toLocaleString();

        // 7. é¡¯ç¤ºç¨…å‹™å»ºè­°
        const taxBox = document.getElementById('tax-analysis-container');
        if (pinLevel > 0 && isCompanyMode) {
            taxBox.style.display = 'block';
            document.getElementById('tax-recommendation-text').innerHTML = 
                `å»ºè­°æˆç«‹å…¬å¸/è¡Œè™Ÿç”³å ±å®‰éº—æ”¶å…¥ã€‚<br>ç›¸è¼ƒå€‹äººåˆä½µç”³å ±ï¼Œæ¯å¹´ç´„å¯çœä¸‹ <strong style="color:#d32f2f; font-size:1.1em;">${taxSaved.toFixed(1)} è¬</strong> ç¨…é‡‘ï¼Œå·²æ‰£é™¤è¨˜å¸³æˆæœ¬ã€‚`;
        } else {
            taxBox.style.display = 'none';
        }

        // 8. å¤¢æƒ³é”æˆæ™‚é–“è¨ˆç®—
        let totalTarget = 0;
        let totalMonthlyLoad = 0; // è²·æˆ¿è²·è»Šå¾Œçš„æœªä¾†æœˆè² æ“”
        
        const dreamCosts = document.getElementsByClassName('dream-cost');
        const dreamTypes = document.getElementsByClassName('dream-type');
        let hasDreams = false;

        for(let i=0; i<dreamCosts.length; i++) {
            const cost = parseFloat(dreamCosts[i].value) || 0;
            const type = dreamTypes[i].value;
            if(cost > 0) {
                hasDreams = true;
                if (type === 'house') {
                    totalTarget += (cost * 0.3); // é ­æœŸ3æˆ
                    // ç°¡æ˜“æˆ¿è²¸æ¨ç®—: è²¸7æˆ, 30å¹´, 2.2% => æ¯ç™¾è¬ç´„3800
                    totalMonthlyLoad += (cost * 0.7 * 3800 / 10000); 
                } else if (type === 'car') {
                    totalTarget += (cost * 0.1); // é ­æœŸ1æˆ
                    // ç°¡æ˜“è»Šè²¸: è²¸9æˆ, 7å¹´
                    totalMonthlyLoad += (cost * 0.9 / 84) * 1.05; 
                } else {
                    totalTarget += cost; // å…¨é¡
                }
            }
        }

        updateResultUI(monthlySurplusBase, totalTarget, totalMonthlyLoad, 'dream-status-current', 'bar-current', false);
        updateResultUI(monthlySurplusAmway, totalTarget, totalMonthlyLoad, 'dream-status-amway', 'bar-amway', true);

        // 9. æ›´æ–°æ¿€å‹µæ–‡å­—
        const motivation = document.getElementById('motivation-text');
        if (monthlySurplusAmway > monthlySurplusBase * 2 && monthlySurplusAmway > 5) {
            motivation.innerHTML = "âš¡ ä½ çš„è²¡å‹™èƒ½é‡æ­£åœ¨æŒ‡æ•¸ç´šçˆ†ç™¼ï¼";
            motivation.style.color = "#b8860b";
        } else if (monthlySurplusAmway < 0) {
            motivation.innerHTML = "âš ï¸ è­¦ç¤ºï¼šç¾é‡‘æµç‚ºè² ï¼Œè«‹èª¿æ•´æ”¯å‡ºæˆ–å¢åŠ æ”¶å…¥";
            motivation.style.color = "#ff6b6b";
        } else {
            motivation.innerHTML = "è¼¸å…¥æ•¸æ“šï¼Œç¹ªè£½ä½ çš„æœªä¾†è—åœ–";
            motivation.style.color = "var(--primary-dream)";
        }
    }

    function updateResultUI(monthlyNet, target, futureLoad, elId, barId, isBoost) {
        const el = document.getElementById(elId);
        const bar = document.getElementById(barId);
        const msg = document.getElementById('time-saved-msg');

        if (!target) {
            el.innerText = isBoost ? "è«‹é¸æ“‡è˜ä½" : "è«‹è¼¸å…¥å¤¢æƒ³é‡‘é¡";
            bar.style.width = "0%";
            if(isBoost) msg.innerText = "";
            return;
        }

        // æª¢æŸ¥ï¼šå­˜åˆ°é ­æœŸæ¬¾å¾Œï¼Œç¹³ä¸ç¹³å¾—èµ·è²¸æ¬¾ï¼Ÿ
        if (monthlyNet < futureLoad && futureLoad > 0) {
            el.innerHTML = "<span style='font-size:0.6em; color:#d32f2f'>è²·å¾—èµ·ï¼Œé¤Šä¸èµ· (æœˆç¾æµä¸è¶³æ”¯ä»˜è²¸æ¬¾)</span>";
            bar.style.width = "5%";
            bar.style.background = "#ff6b6b";
            return;
        }

        if (monthlyNet <= 0) {
            el.innerText = "ç„¡æ³•é”æˆ (ç¾é‡‘æµä¸è¶³)";
            bar.style.width = "0%";
            return;
        }

        const monthsToGoal = target / (monthlyNet * 10000); // è¬è½‰å…ƒ
        const years = Math.floor(monthsToGoal / 12);
        const months = Math.ceil(monthsToGoal % 12);

        let timeText = "";
        if (years > 60) timeText = "è¶…é 60 å¹´ (é™ä¸å¯åŠ)";
        else if (years === 0 && months === 0) timeText = "ç«‹å³å¯é”æˆï¼";
        else timeText = (years > 0 ? `${years}å¹´ ` : "") + `${months}å€‹æœˆ`;

        el.innerText = timeText;

        // é€²åº¦æ¢é‚è¼¯ï¼šå‡è¨­åŸºæº–æ˜¯ 60å¹´(720å€‹æœˆ)
        let percent = 0;
        if (years > 60) percent = 100;
        else percent = (monthsToGoal / 720) * 100;
        
        // è¦–è¦ºå‘ˆç¾ï¼šæ™‚é–“è¶ŠçŸ­ï¼ŒBar è¶Šæ»¿? ä¸ï¼ŒBar ä»£è¡¨æ™‚é–“é•·åº¦ã€‚
        // é€™è£¡åéä¾†åšï¼šé¡¯ç¤º "é”æˆç‡"ã€‚é€™è£¡é¡¯ç¤º "æ™‚é–“ä½”æ¯”"
        let visualWidth = Math.min(percent, 100);
        bar.style.width = visualWidth + "%";
        
        // é¡è‰²æ§åˆ¶
        if (years > 30) bar.style.background = "#ff6b6b"; // ç´…è‰²è­¦ç¤º
        else if (years > 10) bar.style.background = "#fbc02d"; // é»ƒè‰²
        else bar.style.background = "#66bb6a"; // ç¶ è‰²

        // è¨ˆç®—ç¯€çœæ™‚é–“
        if (isBoost) {
            bar.style.background = "linear-gradient(to right, #d4af37, #f9d423)"; // é‡‘è‰²
            // é€™è£¡å¯ä»¥åšä¸€å€‹æ¯”è¼ƒ
            const currentText = document.getElementById('dream-status-current').innerText;
            if (currentText.includes("å¹´")) {
                msg.innerText = "ç›¸è¼ƒåŸæ³ï¼Œä½ çš„äººç”Ÿçœä¸‹äº†æ•¸åå¹´çš„å¥®é¬¥æ™‚é–“ï¼";
            }
        }
    }
</script>

